{
    "name": "stocks",
    "version": "0.0.1",
    "description": "",
    "main": "index.js",
    "bin": {
        "stocks": "bin/stocks"
    },
    "scripts": {
        "prebuild": "rm -rf dist; tslint -c tslint.json -p tsconfig.json --fix",
        "build": "tsc --build tsconfig.json",
        "prebuild:test": "rm -rf dist; tslint -c tslint.json -p tsconfig-spec.json --fix",
        "build:test": "tsc --build tsconfig-spec.json",
        "dev": "concurrently \"npm run server:dev\" \"npm run web:dev\"",
        "server:dev": "node-dev ./dist/index.js",
        "web:dev": "cd frontend && npm run start",
        "start": "node ./bin/www",
        "pretest": "npm run build:test",
        "test": "mocha"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "."
        ],
        "exec": "npm run build",
        "ext": "ts"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.18.3",
        "bootstrap": "^4.1.3",
        "cookie-parser": "~1.4.3",
        "debug": "~2.6.9",
        "express": "^4.16.4",
        "http": "0.0.0",
        "https": "^1.0.0",
        "jade": "^1.11.0",
        "minimalist": "1.0.0",
        "mongodb": "3.2.7",
        "mongoose": "^5.3.12",
        "morgan": "~1.9.0",
        "path": "^0.12.7",
        "pug": "2.0.4",
        "serve-favicon": "~2.4.5"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/express": "^4.17.0",
        "@types/minimist": "^1.2.0",
        "@types/mocha": "^5.2.7",
        "@types/mongoose": "^5.5.8",
        "@types/node": "^12.6.8",
        "chai": "4.2.0",
        "concurrently": "4.1.1",
        "jasmine": "3.4.0",
        "mocha": "6.1.4",
        "node-dev": "^3.1.3",
        "nodemon": "^1.19.1",
        "sinon": "7.3.2",
        "sinon-mongoose": "2.3.0",
        "tslint": "^5.18.0",
        "typescript": "^3.5.3"
    }
}
