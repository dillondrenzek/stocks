{
  "name": "stocks",
  "version": "0.2.2",
  "description": "",
  "main": "index.js",
  "bin": {
    "stocks": "bin/stocks"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --build tsconfig.json; npm run build:copy-assets",
    "build:copy-assets": "node ./copy-static-assets",
    "build:ts": "tsc --build tsconfig.json",
    "prebuild:test": "rm -rf dist",
    "build:test": "tsc --build tsconfig-spec.json",
    "clean": "rm -rf dist",
    "dev": "concurrently \"npm run server:dev\" \"npm run frontend:dev\"",
    "frontend:dev": "cd frontend; npm run start",
    "server:dev": "node-dev ./bin/server",
    "prefrontend:dev": "cd frontend; npm install",
    "preserver:dev": "npm run build",
    "lint": "tslint -c tslint.json -p tsconfig-spec.json --fix",

    "set-ruby": "rvm use ruby-2.4.2",
    "predev:docs": "cd docs; npm run set-ruby; bundle install",
    "dev:docs": "cd docs; jekyll serve",

    "pretest": "npm run build:test",
    "pretest:app": "npm run build:test",
    "pretest:db": "npm run build:test",
    "test": "mocha --exit",
    "test:app": "mocha --exit --config .mocharc-app.json",
    "test:db": "mocha --exit --config .mocharc-db.json",
    
    "start": "node ./bin/www",
    "watch": "npm-watch"
  },
  "watch": {
    "server:dev": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,pug"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/request": "2.48.2",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.1.3",
    "clsx": "1.0.4",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "http": "0.0.0",
    "https": "^1.0.0",
    "jade": "^1.11.0",
    "minimalist": "1.0.0",
    "mongodb": "3.2.7",
    "mongoose": "^5.3.12",
    "morgan": "~1.9.0",
    "path": "^0.12.7",
    "pug": "2.0.4",
    "request": "2.88.0",
    "serve-favicon": "~2.4.5",
    "shelljs": "0.8.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.17.0",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.8",
    "@types/node": "^12.6.8",
    "chai": "4.2.0",
    "concurrently": "4.1.1",
    "jasmine": "3.4.0",
    "mocha": "^6.1.4",
    "node-dev": "^3.1.3",
    "nodemon": "^1.19.1",
    "npm-watch": "0.6.0",
    "sinon": "7.3.2",
    "sinon-mongoose": "2.3.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  }
}
